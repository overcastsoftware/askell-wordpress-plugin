{
	"name": "askell-registration",
	"version": "0.2.0",
	"description": "Sign up for recurring subscriptions directly from WordPress using Askell",
	"author": "Overcast Software",
	"license": "GPL-3.0-or-later",
	"homepage": "https://askell.is/",
	"main": "build/index.js",
	"scripts": {
		"build": "wp-scripts build ./src/admin.js ./src/index.js ./src/frontend.js ./src/admin.scss ./src/style.scss ./src/askellRegistration.js ./src/editor-sidebar.js",
		"format": "wp-scripts format",
		"lint:css": "wp-scripts lint-style ./src/admin.scss ./src/style.scss ./src/editor.scss --fix",
		"lint:js": "wp-scripts lint-js ./src --fix",
		"packages-update": "wp-scripts packages-update",
		"plugin-zip": "wp-scripts plugin-zip",
		"start": "wp-scripts start ./src/admin.js ./src/index.js ./src/frontend.js ./src/admin.js ./src/admin.scss ./src/style.scss ./src/askellRegistration.js ./src/editor-sidebar.js"
	},
	"devDependencies": {
		"@babel/cli": "*",
		"@babel/core": "*",
		"@babel/preset-env": "*",
		"@babel/preset-react": "*",
		"@wordpress/eslint-plugin": "*",
		"@wordpress/scripts": "*",
		"eslint-plugin-prettier": "*"
	},
	"files": [
		"readme.txt",
		"askell-registration.php",
		"classes",
		"views",
		"build",
		"assets",
		"languages"
	]
}
